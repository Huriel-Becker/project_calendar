<body>
    <h1>Cadastro de Consulta</h1>
    <hr>
    <form method="post" action="create">
        <div class="d-grid gap-2">
            <input type="text" name="name" id="name" placeholder="Nome do cliente" class="form-control">
            <input type="email" name="email" id="email" placeholder="email@email.com" class="form-control">
            <input type="text" name="cpf" id="cpf" placeholder="CPF" class="cpf form-control">
            <input type="text" name="description" id="description" class="form-control" placeholder="DescriÃ§Ã£o">
            <input type="date" name="date" id="date" class="form-control">
            <input type="time" name="time" id="time" class="form-control">
        </div>
        <div class="d-grid gap-2 p-2">
            <button class="btn btn-lg btn-success">Agendar</button>
        </div>
    </form>
</body>

